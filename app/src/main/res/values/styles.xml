<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="nav_button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#EFEFEF</item>
        <item name="android:shadowColor">#090d11</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">#536678</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">.005</item>
        <item name="android:radius">0dp</item>
        <item name="android:width">160dp</item>
        <item name="android:height">40dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginVertical">2.5dp</item>
    </style>

    <style name="mainTitle">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#EFEFEF</item>
        <item name="android:shadowColor">#090d11</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">.005</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="subtitle">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#EFEFEF</item>
        <item name="android:shadowColor">#090d11</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">.005</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="basicText">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#EFEFEF</item>
        <item name="android:shadowColor">#090d11</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">.005</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="leftGridText">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">#EFEFEF</item>
        <item name="android:shadowColor">#090d11</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">.005</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="rightGridText">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">#EFEFEF</item>
        <item name="android:shadowColor">#090d11</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">.005</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="helperText">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#A3A3A3</item>
        <item name="android:shadowColor">#090d11</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">.005</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="characterButton">
        <item name="android:backgroundTint">@color/btn_background</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="characterButtonDLC">
        <item name="android:backgroundTint">@color/dlc</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="spinner">
        <item name="android:spinnerItemStyle">@style/nav_button</item>
    </style>
</resources>