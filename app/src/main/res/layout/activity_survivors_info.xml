<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="@color/colorPrimary"
    tools:context=".SurvivorsInfoActivity">

    <ScrollView
        android:id="@+id/sv_characterInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_characterInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_characterIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:srcCompat="@android:drawable/list_selector_background" />

            <TextView
                android:id="@+id/tv_characterLabel"
                style="@style/mainTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottom_border" />

            <TextView
                android:id="@+id/tv_characterDescription"
                style="@style/basicText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView" />

            <LinearLayout
                android:id="@+id/ll_health"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_healthLabel"
                    style="@style/leftGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/health" />

                <TextView
                    android:id="@+id/tv_healthStat"
                    style="@style/rightGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_damage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_damageLabel"
                    style="@style/leftGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dmg" />

                <TextView
                    android:id="@+id/tv_damageStat"
                    style="@style/rightGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_regen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_regenLabel"
                    style="@style/leftGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/regen" />

                <TextView
                    android:id="@+id/tv_regenStat"
                    style="@style/rightGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_class"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_classLabel"
                    style="@style/leftGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/type" />

                <TextView
                    android:id="@+id/tv_classStat"
                    style="@style/rightGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_armor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_armorLabel"
                    style="@style/leftGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/armor" />

                <TextView
                    android:id="@+id/tv_armorStat"
                    style="@style/rightGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_speed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_speedLabel"
                    style="@style/leftGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/speed" />

                <TextView
                    android:id="@+id/tv_speedStat"
                    style="@style/rightGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_massLabel"
                    style="@style/leftGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mass" />

                <TextView
                    android:id="@+id/tv_massStat"
                    style="@style/rightGridText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_skills"
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottom_border"
                android:text="@string/skills" />

            <Spinner
                android:id="@+id/sp_typeSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="25dp"
                android:dropDownWidth="wrap_content"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/sp_abilitySelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="25dp"
                android:dropDownWidth="wrap_content"
                android:spinnerMode="dialog" />

            <LinearLayout
                android:id="@+id/ll_abilityInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TableRow
                    android:id="@+id/tr_abilityCooldown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_abilityCooldownLabel"
                        style="@style/basicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/abilityCooldown"
                        android:textAlignment="viewStart" />

                    <TextView
                        android:id="@+id/tv_abilityCooldown"
                        style="@style/basicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr_abilityProc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_abilityProcLabel"
                        style="@style/basicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/abilityProc"
                        android:textAlignment="viewStart" />

                    <TextView
                        android:id="@+id/tv_abilityProc"
                        style="@style/basicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr_abilityDescr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_abilityDescrLabel"
                        style="@style/basicText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/abilityDescr"
                        android:textAlignment="viewStart" />

                    <TextView
                        android:id="@+id/tv_abilityDescr"
                        style="@style/basicText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd" />
                </TableRow>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>